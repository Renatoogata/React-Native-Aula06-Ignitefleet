{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "tags": [
          "styled",
          "css",
          "sty"
        ]
      }
    ],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@theme/*": [
        "./src/theme/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
    }
  }
}